    </com.freddy.silhouette.widget.layout.SleLinearLayout>

    <com.savvi.rangedatepicker.CalendarPickerView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/calendar_view"
        android:layout_width="500dp"
        android:layout_height="410dp"
        app:spanCount="10"
        android:layout_centerHorizontal="true"
        android:background="#fff"
        android:scrollbarStyle="outsideOverlay"
        android:clipToPadding="false"
        app:tsquare_orientation_horizontal="true"
        android:layout_below="@+id/list"
        app:tsquare_dividerColor="@color/transparent"
        app:tsquare_headerTextColor="#555"
        />
    <ImageView
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:src="@mipmap/turn_left"
        android:layout_toLeftOf="@+id/calendar_view"
        android:layout_marginTop="550dp"
        android:layout_marginRight="10dp"
        android:id="@+id/turn_left"
        />
    <ImageView
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:src="@mipmap/turn_right"
        android:layout_toRightOf="@+id/calendar_view"
        android:layout_marginTop="550dp"
        android:layout_marginLeft="10dp"
        android:id="@+id/turn_right"

        />
    <Button
        android:layout_width="180dp"
        android:layout_height="45dp"
        android:id="@+id/btn_generate"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/calendar_view"
        android:layout_marginTop="5dp"
        style="?borderlessButtonStyle"
        android:textColor="@color/white"
        android:text="一键生成"
        android:gravity="center"
        android:textSize="20sp"
        android:visibility="visible"
        android:background="@drawable/btn_ripple"
        />
